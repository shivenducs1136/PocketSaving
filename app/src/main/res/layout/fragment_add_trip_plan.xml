<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddTripPlanFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the total Amount Spend"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"
                android:id="@+id/trip_total_amount_spend_txt"
                />
            <EditText
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trip_total_amount_spend"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_amount_spend_txt"
                android:background="@color/white"
                android:padding="5dp"
                android:inputType="number"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="type here.. "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Persons"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_amount_spend"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"
                android:id="@+id/trip_total_number_of_persons_txt"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trip_total_number_of_person"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_number_of_persons_txt"
                android:background="@color/white"
                android:padding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:inputType="number"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="type here.. "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Purchased"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_number_of_person"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"
                android:id="@+id/trip_total_item_purchased_txt"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trip_total_item_purchased"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_item_purchased_txt"
                android:background="@color/white"
                android:padding="5dp"
                android:inputType="text"
                android:maxLength="20"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="type here.. "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_item_purchased"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"
                android:id="@+id/trip_total_note_txt"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trip_total_note"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_note_txt"
                android:background="@color/white"
                android:padding="5dp"
                android:inputType="text"
                android:maxLength="20"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="type here.. "
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/trip_plan_submit"
                app:layout_constraintTop_toBottomOf="@+id/trip_total_note"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>